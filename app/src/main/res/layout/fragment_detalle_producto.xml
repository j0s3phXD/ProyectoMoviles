<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/logo_back"
            android:contentDescription="Regresar"
            android:layout_gravity="start"/>

        <!-- Título de la app-->
        <TextView
            android:id="@+id/tvTituloApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Foto del producto -->
        <ImageView
            android:id="@+id/imgProducto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@android:color/transparent"
            android:contentDescription="Imagen del producto" />


        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/tvNombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- Categoría -->
        <TextView
            android:id="@+id/tvCategoriaProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp" />

        <!-- CARD: Descripción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_detalle_seccion"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvDescripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- CARD: Busco a cambio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_detalle_seccion"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busco a cambio"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvIntercambioTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- CARD: Ofrecido por -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_detalle_seccion"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ofrecido por"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <!-- Fila con avatar (futuro) + nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <!--
                Aquí más adelante puedes poner un avatar:
                <ImageView
                    android:id="@+id/ivAvatarUsuario"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_avatar_placeholder"
                    android:layout_marginEnd="8dp" />
                -->
                <TextView
                    android:id="@+id/tvNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnContactarVendedor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Iniciar intercambio"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnChatGrupal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat Grupal"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/secondary"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
