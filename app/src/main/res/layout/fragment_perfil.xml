<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Avatar: foto o iniciales -->
            <FrameLayout
                android:id="@+id/avatarContainer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp">

                <!-- Círculo de color para iniciales -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/logo_avatar_circle" />

                <!-- Iniciales (cuando NO hay foto) -->
                <TextView
                    android:id="@+id/tvInicialesPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="AB"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <!-- Foto real del usuario -->
                <ImageView
                    android:id="@+id/imgPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_registrar"
                    android:visibility="gone" />

            </FrameLayout>

            <!-- Nombre y estrellas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:rating="0"

                    android:progressTint="#FFC107"
                    android:secondaryProgressTint="#FFD54F"
                    android:progressBackgroundTint="#C0C0C0" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCounters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Productos publicados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvContadorProductos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Productos publicados"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Intercambios completados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvContadorIntercambios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intercambios completados"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

        </LinearLayout>

        <!-- Sección Intercambios -->
        <LinearLayout
            android:id="@+id/layoutIntercambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <!-- TÍTULO 1 -->
            <TextView
                android:id="@+id/tvMisIntercambiosTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis Intercambios"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMisIntercambios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:paddingBottom="20dp" />

            <!-- TÍTULO 2 -->
            <TextView
                android:id="@+id/tvIntercambiosRecibidosTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Intercambios Recibidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIntercambiosRecibidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <!-- TÍTULO 3 -->
            <TextView
                android:id="@+id/tvHistorialIntercambiosTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de Intercambios"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:textColor="@color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHistorialIntercambios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
