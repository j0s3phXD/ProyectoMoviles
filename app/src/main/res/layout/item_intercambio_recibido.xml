<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="14dp"
    android:padding="12dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/background_card"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgProductoIntercambio"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/logo_registrar"
                android:src="@drawable/logo_registrar"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProductoSolicitado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Te solicitaron: Bicicleta"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/txtProductoOfrecido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A cambio de: Laptop"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario: Juan Pérez"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtEstadoIntercambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado: Pendiente"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/txtComision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comisión por aceptar: S/ 0.00"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="Aceptar"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:backgroundTint="@color/primary"/>

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Rechazar"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:backgroundTint="@color/primary"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnComprobante"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Ver comprobante"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
