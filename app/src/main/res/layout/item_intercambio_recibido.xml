<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    android:elevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="false"
    android:focusable="false"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FOTO + TEXTO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProductoIntercambio"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_registrar"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProductoSolicitado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Te solicitaron: Bicicleta"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtProductoOfrecido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A cambio de: Laptop"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuario: Juan PÃ©rez"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/txtEstadoIntercambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado: Pendiente"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ACEPTAR"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="RECHAZAR"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btnComprobante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver comprobante"
                android:padding="8dp"
                android:background="@color/purple_500"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
