<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:padding="16dp"
    android:paddingBottom="100dp"
    android:background="@color/background_light">

    <!-- Contenedor para centrar la tarjeta -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tarjeta principal del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_publicar"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_margin="8dp">

            <!-- Título principal -->
            <TextView
                android:id="@+id/textTituloPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publicar producto"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:paddingBottom="16dp" />

            <!-- Sección: Fotos -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fotos del producto"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <!-- CUADRO DE CARGA AJUSTADO Y CENTRADO -->
            <FrameLayout
                android:id="@+id/frameAgregarFoto"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/logo_cuadro_de_carga"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:gravity="center">

                <!-- Contenido cuando NO hay imagen -->
                <LinearLayout
                    android:id="@+id/layoutUploadContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/ivUploadIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/logo_carga"
                        app:tint="@color/secondary"/>

                    <TextView
                        android:id="@+id/textAgregarFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haz clic para subir imágenes"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:paddingTop="10dp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Imagen cuando el usuario selecciona algo -->
                <ImageView
                    android:id="@+id/ivFotoProducto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:background="@android:color/transparent" />
            </FrameLayout>

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles del producto"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16sp" />

            <!-- Campo: Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del producto *"
                android:textColor="@color/text_secondary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ej: Bicicleta de montaña"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <!-- Campo: Categoría -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categoría *"
                android:textColor="@color/text_secondary"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <!-- Campo: Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción *"
                android:textColor="@color/text_secondary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editDescripcion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:hint="Describe tu producto, su estado y características…"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <!-- Campo: Nivel de uso -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nivel de uso"
                android:textColor="@color/text_secondary"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerUso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp"
                android:entries="@array/nivel_uso"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

            <!-- Campo: ¿Qué buscas a cambio? -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué buscas a cambio?"
                android:textColor="@color/text_secondary"
                android:paddingBottom="4dp" />

            <EditText
                android:id="@+id/editIntercambio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe qué productos te interesan para el intercambio…"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/text_hint"
                android:textColor="@color/text_primary"
                android:textSize="14sp" />

            <!-- Botón -->
            <Button
                android:id="@+id/btnPublicar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publicar producto"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
