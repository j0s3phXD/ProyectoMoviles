<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:src="@drawable/logo_back"
            android:contentDescription="Volver" />

        <TextView
            android:id="@+id/tvTituloPantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proponer intercambio"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvSubtituloPantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona qué producto quieres ofrecer a cambio"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProductoDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="12dp"
            android:radius="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgProductoDestino"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/card_detalle_seccion"
                    android:src="@drawable/logo_carga"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvNombreProductoDestino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del producto destino"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvCategoriaDestino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categoría"
                        android:textSize="12sp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/chip_categoria"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDuenoDestino"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De Nombre del dueño"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTituloMisProductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus productos disponibles"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMisProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/tvTituloMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensaje para el dueño"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDescripcionMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explica por qué crees que es un buen intercambio"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe un mensaje para el dueño"
            android:minLines="3"
            android:gravity="top|start"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnEnviarPropuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar propuesta" />

    </LinearLayout>
</ScrollView>
