<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar Contraseña"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/lblSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tus datos para recibir un código SMS."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lblTitulo"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ilEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/lblSubtitulo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmailRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ilTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Teléfono registrado"
        android:layout_marginTop="16dp"
        app:prefixText="+51 "
        app:layout_constraintTop_toBottomOf="@id/ilEmail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtTelefonoRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="9"
            android:inputType="phone"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnEnviarCodigo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ENVIAR CÓDIGO SMS"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/ilTelefono"/>

</androidx.constraintlayout.widget.ConstraintLayout>